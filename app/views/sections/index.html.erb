<p id="notice"><%= notice %></p>

<div class="container header" style="color:black;font-family: monospace"> <h1>Sections</h1></div>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Semester</th>
      <th>Number</th>
      <th>Course</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.semester %></td>
        <td><%= section.number %></td>
        <td><%= section.course.name %></td>
        <td><%= section.room %></td>
        <td><%= link_to 'Show', section, :style => 'color:pink;' %></td>
        <td><%= link_to 'Edit', edit_section_path(section),:style => 'color:pink;' %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' },:style => 'color:pink;' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Section', new_section_path, :class => "btn btn-outline-secondary" %>
 
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Section</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">New Section</label>
            <input type="text" class="form-control" id="recipient-name">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Send message</button>
      </div>
    </div>
  </div>
</div>
